<div class="kiwi">
  <p>KiWi</p>
</div>

<div class="container">

  <div class="bg">
    <img>
  </div>

  <fieldset class="sign-in-form">
    
    <h3>Login to explore</h3>
  
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail",required: true %>
    
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", required: true %>

      <% if devise_mapping.rememberable? %>
        
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>

      <% end %>


      <button type="submit">Login</button>
          
      <%= render "devise/shared/links" %>

    <% end %>
      
  </fieldset>



</div>

